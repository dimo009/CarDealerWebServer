@model CarFormModel


<form method="post">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class=" form-control">
        <span asp-validation-for="Make" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class=" form-control">
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Distance"></label>
        <input asp-for="Distance" mmin="0" class=" form-control">
        <span asp-validation-for="Distance" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <select multiple class="form-control" style="height:300px">
            <option value="opel">Opel</option>
            <option value="bmw">BMW</option>
            <option value="mercedes">Mercedes</option>
            <option value="saab">Saab</option>
            <option value="mazda">Mazda</option>
            <option value="renault">Renault</option>
            <option value="citroen">Citroen</option>

        </select>

    </div>

    <div>
        <input class="btn btn-success" type="submit" value="Save car" />
    </div>
</form>