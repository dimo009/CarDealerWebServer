@model IEnumerable<CarPartsModel>

@{
    ViewData["Title"] = "All cars with their parts";
}

<h2>@ViewData["Title"]</h2>

<table>
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
               Model
            </th>
            <th>
               Distance
            </th>
            <th>
                Parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <th>
                    @car.Make
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @(car.Distance/1000) KM
                </th>
                <th>
                    <ul>
                        @foreach (var part in car.Parts)
                        {
                            <li>@part.Name - $@part.Price.ToString("F2")</li>
                        }
                    </ul>
                </th>
            </tr>
        }
    </tbody>
</table>

