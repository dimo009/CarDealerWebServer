@model CarsByMakeModel

@{
    ViewData["Title"] = $"{Model.Make} cars";
}

<h2>@Model.Make Cars</h2>
<a href="/cars/create" class="btn btn-primary">Add car</a>

<table class="table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <th>
                   <a href="cars/@car.Make">@car.Make</a>
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @(car.Distance/1000) KM
                </th>
            </tr>
        }
    </tbody>
</table>
